<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Payment - TCBundle{% endblock %}</title>
        {% block stylesheets %}
            <link type="text/css" href="/bundles/symfonydevtc/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">

        {% for msg in app.session.flashbag.get('ALERT_ERROR') %}
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-ban"></i> Error!</h4>
                {{ msg|raw }}
            </div>
        {% endfor %}
        {% for msg in app.session.flashbag.get('ALERT_SUCCESS') %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-check"></i> Success!</h4>
                {{ msg|raw }}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="/bundles/symfonydevtc/js/jQuery-2.1.4.min.js" type="text/javascript"></script>
            <script src="/bundles/symfonydevtc/js/bootstrap.min.js" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
